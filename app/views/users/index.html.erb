    <table class="table table-hover">
        <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Admin?</th>
              <th></th>
              <th></th>
            </tr>
        </thead>
        <tbody>
        <% @users.each do |u| %>
            <tr>
              <td><%= u.id %></td>
              <td><%= u.name %></td>
              <td><%= u.email %></td>
              <td><%= "Yes" if u.admin %></td>
              <td><%= link_to "Edit", edit_user_path(u.id)%></td>
              <td><%= link_to "Delete", user_path(u.id), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%></td>
            </tr>
        <% end %>
        </tbody>
    </table>

