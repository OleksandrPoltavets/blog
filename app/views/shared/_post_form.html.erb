<%= form_for(@post) do |p| %>
    <div class="form-group">
        <%= p.label :content, 'Write your Post here:' %>
        <%= p.text_area :content, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
        <%= p.submit "Add Post", class: 'btn btn-primary' %>
    </div>
<% end %>