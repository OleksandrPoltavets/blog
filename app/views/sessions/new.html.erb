<h3>Please enter Email and password to the form below:</h3>

<%= form_tag sessions_path do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email], class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, params[:password], class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= submit_tag "Log In", class: 'btn btn-primary' %> or
      <%= link_to "Create new account", signup_url %>
    </div>
<% end %>
