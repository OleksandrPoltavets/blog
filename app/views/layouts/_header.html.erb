<%= nav_bar :static => :top, :brand => "Sancho BLOG", :responsive => true do %>
    <%= menu_group do %>
        <%= menu_item "Home", root_path %>
        <%= menu_divider %>
        <% #drop_down "Products" do %>
            <% #menu_item "Things you can't afford", '#' %>
            <% #menu_item "Things that won't suit you anyway", '#' %>
            <% #menu_item "Things you're not even cool enough to buy anyway", '#' %>
        <% #end %>
        <%= menu_item "About Us", pages_about_path %>
        <%= menu_item "Contact", pages_contacts_path %>
    <% end %>
    <%= menu_group :pull => :right do %>
            <% if current_user %>
                <%= menu_item "#{current_user.name} (#{current_user.email})", edit_user_path(current_user) %>
                <%= menu_item "Log Out", logout_path %>
            <% else %>
                <%= menu_item "Log In", login_path%>
                <%= menu_item "Log In with Facebook", "/auth/facebook", id: "sign_in"%>
                <%= menu_item "Sign Up", signup_path %>
            <% end %>
    <% end %>
<% end %>
