<%= nav_bar :static => :top, :brand => "Sancho BLOG", :responsive => true do %>
    <%= menu_group do %>
        <%= menu_item root_path do %>
            <i class="fa fa-home"></i> Home
        <% end %>
        <%= menu_divider %>
        <% #drop_down "Products" do %>
            <% #menu_item "Things you can't afford", '#' %>
            <% #menu_item "Things that won't suit you anyway", '#' %>
            <% #menu_item "Things you're not even cool enough to buy anyway", '#' %>
        <% #end %>
        <%= menu_item "About Us", about_path %>
        <%= menu_item "Contact", contacts_path %>
    <% end %>
    <%= menu_group :pull => :right do %>
            <% if current_user %>

                <%= menu_divider %>
                <%= drop_down raw('<i class="fa fa-user"></i>')+" #{current_user.name}" do %>
                    <%= menu_item raw('<i class="fa fa-edit"></i>')+" Edit profile", edit_user_path(current_user) %>
                    <%= menu_item raw('<i class="fa fa-plus"></i>')+" Create trip", create_trip_path %>
                    <%= menu_item admin? ? raw('<i class="fa fa-car"></i>')+" Trips" : raw('<i class="fa fa-car"></i>')+" My Trips", trips_path %>
                    <%= menu_divider %>
                    <% if admin? %>
                        <%= menu_item users_path do %>
                            <i class="fa fa-users"></i> Users
                        <% end %>
                    <% end %>
                <% end %>
                <%= menu_item logout_path do %>
                    <i class="fa fa-sign-out"></i> Log Out
                <% end %>
            <% else %>
                <%= menu_item signup_path do %>
                    <i class="fa fa-magic"></i> Create Account
                <% end %>
                <%= menu_item "/auth/facebook", id: "sign_in" do %>
                    <i class="fa fa-facebook-square"></i> Log In with Facebook
                <% end %>
                <%= menu_item login_path do %>
                    <i class="fa fa-sign-in"></i> Log In
                <% end %>
            <% end %>
    <% end %>
<% end %>
